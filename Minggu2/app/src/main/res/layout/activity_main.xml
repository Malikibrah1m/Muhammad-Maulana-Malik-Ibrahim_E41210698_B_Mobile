<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/circle"
            android:text="5"
            android:textSize="30dp"
            android:onClick="TableLayout"></Button>
        <Button
            android:id="@+id/btn6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn5"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/circle"
            android:text="6"
            android:textSize="30dp"
            android:onClick="MaterialDesign"></Button>
        <Button
            android:id="@+id/btn4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/circle"
            android:text="4"
            android:textSize="30dp"
            android:onClick="FrameLayout"></Button>
        <Button
            android:id="@+id/btn2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toTopOf="@id/btn5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/circle"
            android:text="2"
            android:textSize="30dp"
            android:onClick="RelativeLayout"></Button>
        <Button
            android:id="@+id/btn3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toTopOf="@id/btn6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn2"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/circle"
            android:text="3"
            android:textSize="30dp"
            android:onClick="ConstraintLayout"></Button>
        <Button
            android:id="@+id/btn1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toTopOf="@id/btn4"
            app:layout_constraintEnd_toStartOf="@id/btn2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/circle"
            android:text="1"
            android:textSize="30dp"
            android:onClick="LinearLayout"></Button>
        <Button
            android:id="@+id/btn8"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn5"
            android:background="@drawable/circle"
            android:text="8"
            android:textSize="30dp"
            android:onClick="HorizontalScroll"></Button>
        <Button
            android:id="@+id/btn7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn4"
            android:background="@drawable/circle"
            android:text="7"
            android:textSize="30dp"
            android:onClick="VerticalScroll"></Button>

        <TextView
            android:id="@+id/LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Linear Layout"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/btn1"
            app:layout_constraintStart_toStartOf="@+id/btn1"
            app:layout_constraintTop_toBottomOf="@+id/btn1"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/RelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Relative Layout"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/btn2"
            app:layout_constraintStart_toStartOf="@+id/btn2"
            app:layout_constraintTop_toBottomOf="@+id/btn2"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/ConstraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Constraint Layout"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/btn3"
            app:layout_constraintStart_toStartOf="@+id/btn3"
            app:layout_constraintTop_toBottomOf="@+id/btn3"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/FrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frame Layout"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/btn4"
            app:layout_constraintStart_toStartOf="@+id/btn4"
            app:layout_constraintTop_toBottomOf="@+id/btn4"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/TableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table Layout"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/btn5"
            app:layout_constraintStart_toStartOf="@+id/btn5"
            app:layout_constraintTop_toBottomOf="@+id/btn5"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/MaterialLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Material Layout"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/btn6"
            app:layout_constraintStart_toStartOf="@+id/btn6"
            app:layout_constraintTop_toBottomOf="@+id/btn6"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/ScrollViewLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vertical Scroll"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/btn7"
            app:layout_constraintStart_toStartOf="@+id/btn7"
            app:layout_constraintTop_toBottomOf="@+id/btn7"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/ScrollViewHorizontalLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horizontal Scroll"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/btn8"
            app:layout_constraintStart_toStartOf="@+id/btn8"
            app:layout_constraintTop_toBottomOf="@+id/btn8"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>